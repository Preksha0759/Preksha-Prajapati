rules_version = '2';

// By default, deny all reads and writes
// This is a secure default, you must explicitly enable access
service cloud.firestore {
  match /databases/{database}/documents {
    
    // For this demo, we are allowing open access to the events collection
    // to simplify development without user authentication.
    // WARNING: In a production application, you MUST secure these rules.
    // For example, you might restrict writes to authenticated users and
    // only allow reads for 'approved' events.
    match /events/{eventId} {
      allow read, write: if true;
    }

    // Example of more secure rules for a production app with authentication:
    /*
    match /events/{eventId} {
      // Allow anyone to read approved events
      allow read: if resource.data.status == 'approved';
      
      // Allow authenticated users to create events
      allow create: if request.auth != null;

      // Allow the user who submitted the event or an admin to update it
      allow update: if request.auth.uid == resource.data.submittedBy || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      
      // Allow an admin to delete events
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    */

    // Lock down other collections you might add in the future
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
